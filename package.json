{
  "name": "elasticsearch-relay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "graphql-codegen -w & tsc-watch --build --onSuccess \"bash -c 'npm run copy-schemas && node ./dist/server.js'\"",
    "clean": "rm -rf dist",
    "prebuild": "graphql-codegen",
    "build": "tsc --build && npm run copy-schemas",
    "docker-build": "docker build --tag elasticsearch-relay .",
    "copy-schemas": "cpx src/schema.graphql dist"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.6.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "graphql-fields": "^2.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.3",
    "@graphql-codegen/introspection": "1.13.3",
    "@graphql-codegen/typescript": "1.13.3",
    "@graphql-codegen/typescript-resolvers": "1.13.3",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/graphql-fields": "^1.3.2",
    "@types/node": "^13.11.1",
    "cpx": "^1.5.0",
    "graphql-import": "^1.0.2",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  }
}
