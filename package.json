{
  "name": "elasticsearch-relay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist src/generated/*",
    "start": "concurrently npm:watch-*",
    "watch-tsoa": "nodemon --watch src --watch tsoa.json --ext ts --ignore src/generated --exec 'tsoa spec-and-routes'",
    "watch-graphql": "graphql-codegen -w",
    "watch-schema": "nodemon --watch src/graphql/schema.graphql --exec \"npm run copy-schema\"",
    "watch-tsc": "tsc-watch --noClear --onSuccess \"node dist/index.js\"",
    "generate": "concurrently \"tsoa spec-and-routes\" \"graphql-codegen\"",
    "prebuild": "npm run generate",
    "build": "concurrently \"tsc\" \"npm:copy-schema\"",
    "docker-build": "docker build --tag openeduhub/oeh-search-elasticsearch-relay:local .",
    "copy-schema": "cpx src/graphql/schema.graphql dist/graphql",
    "update-vocabs": "ts-node scripts/updateVocabs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "tslint --exclude 'src/generated/**/*' --project . "
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.9.1",
    "apollo-server-express": "^2.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "elastic-ts": "^0.4.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-fields": "^2.0.3",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^6.2.6",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.1",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-resolvers": "^1.17.10",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/graphql-fields": "^1.3.3",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.6",
    "@types/swagger-ui-express": "^4.1.2",
    "axios": "^0.21.1",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "lodash": "^4.17.20",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,html,css,scss}": "prettier --write",
    "*.ts": "tslint --fix"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
